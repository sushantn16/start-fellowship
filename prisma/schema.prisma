// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  startups  Startup[]
  events    Event[]
}

model Startup {
  id          Int         @id @default(autoincrement())
  name        String
  website     String
  founder     String
  description String
  city        String
  country     String
  stage       Stage
  tasks       Task[] // 1-n relation to Task
  messages    Message[] // 1-n relation to Message
  notes       Note[] // 1-n relation to Note
  milestones  Milestone[] // 1-n relation to Milestone
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  users       User[] // Many-to-many relation with User
}

model Task {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  done      Boolean  @default(false)
  startupId Int
  startup   Startup  @relation(fields: [startupId], references: [id])
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  startupId Int
  startup   Startup  @relation(fields: [startupId], references: [id])
}

model Note {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  startupId Int
  startup   Startup  @relation(fields: [startupId], references: [id])
}

model Milestone {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  startupId   Int
  startup     Startup  @relation(fields: [startupId], references: [id])
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  location    String   // New field for event location
  date        DateTime // New field for event date
  createdAt   DateTime @default(now())
  users       User[]   // Many-to-many relation with User
}

enum Role {
  USER
  MENTOR
  ADMIN
}

enum Stage {
  IDEA
  DEVELOPMENT
  LAUNCH
}
